@page
@model Software_Assesment.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1></h1>

<h4>Make a Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.LastName" class="control-label"></label>
                <input asp-for="Booking.LastName" class="form-control" />
                <span asp-validation-for="Booking.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.FirstName" class="control-label"></label>
                <input asp-for="Booking.FirstName" class="form-control" />
                <span asp-validation-for="Booking.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.SessionDate" class="control-label"></label>
                <input asp-for="Booking.SessionDate" class="form-control" />
                <span asp-validation-for="Booking.SessionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.SessionTime" class="control-label"></label>
                <input asp-for="Booking.SessionTime" class="form-control" />
                <span asp-validation-for="Booking.SessionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.SessionLength" class="control-label"></label>
                <input asp-for="Booking.SessionLength" class="form-control" />
                <span asp-validation-for="Booking.SessionLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Description" class="control-label"></label>
                <input asp-for="Booking.Description" class="form-control" />
                <span asp-validation-for="Booking.Description" class="text-danger"></span>
            </div>
            @*drop down list filled by venue enum in booking model page*@
            <div class="form-group">
                <label asp-for="Booking.Venue" class="control-label">Select a Venue</label>
                <select asp-for="Booking.Venue" class="form-control" 
                        asp-items="Html.GetEnumSelectList<Software_Assesment.Models.Venue>()" required>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ContactNumber" class="control-label"></label>
                <input asp-for="Booking.ContactNumber" class="form-control" />
                <span asp-validation-for="Booking.ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
