@model Software_Assesment.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].SessionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].SessionTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].SessionLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].ContactNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
